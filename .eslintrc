{
  "extends": [
    "standard",
    "standard-preact",
    "prettier",
    "prettier/react",
    "prettier/standard"
  ],
  "plugins": ["react", "standard", "prettier", "jest"],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "globals": {
    "sleep": true
  },
  "rules": {
    "space-before-function-paren": 2,
    "jsx-quotes": ["error", "prefer-double"]
  }
}
