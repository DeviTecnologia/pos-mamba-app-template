{
  "name": "mamba-app-template",
  "version": "1.0.0-alpha",
  "description": "Starter template for Mamba Applications.",
  "author": "Christian Kaisermann <christian.kaisermann@stone.com.br>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">= 8",
    "npm": ">= 5",
    "yarn": ">= 1.7"
  },
  "scripts": {
    "start": "webpack-dev-server --config webpack/config.dev.js",
    "build": "cross-env NODE_ENV=production webpack --config webpack/config.build.js",
    "build:dev": "webpack --config webpack/config.build.js",
    "build:analyze": "cross-env NODE_ENV=production webpack --config webpack/config.analyzer.js",
    "deploy:stone": "yarn build && rm -rf dist/ && mv bundle/ dist/ && mamba app deploy",
    "test": "jest --coverage",
    "test:watch": "yarn test --watch",
    "lint": "yarn lint:js; yarn lint:css;",
    "lint:js": "eslint *.js \"{src,test,webpack}/**/*.{js,html,svelte}\"",
    "lint:css": "stylelint --custom-syntax \"postcss-html\" \"src/**/*.{html,svelte,css,pcss}\"",
    "format": "yarn format:css; yarn format:js",
    "format:js": "prettier --write *.js \"{src,test,webpack}/**/*.js\" && eslint --fix *.js \"{src,test,webpack}/**/*.{js,html,svelte}\"",
    "format:css": "stylelint --fix --custom-syntax \"postcss-html\" \"src/**/*.{html,svelte,css,pcss}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,svelte}": [
      "eslint --fix",
      "stylelint --fix --custom-syntax \"postcss-html\"",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{pcss,css}": [
      "stylelint --fix --custom-syntax \"postcss-html\"",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.54",
    "@laomao800/webpack-archive-plugin": "^2.0.0",
    "@mambasdk/configs": "0.0.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.0.1",
    "babel-loader": "^8.0.0-beta",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "cssnano": "^4.0.2",
    "eslint": "^5.1.0",
    "eslint-loader": "^2.0.0",
    "file-loader": "^1.1.11",
    "filemanager-webpack-plugin": "^1.0.27",
    "html-minifier": "^3.5.16",
    "husky": "^0.15.0-rc.13",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.1.0",
    "json-loader": "^0.5.7",
    "lint-staged": "^7.2.0",
    "mini-css-extract-plugin": "^0.4.0",
    "mini-html-webpack-plugin": "^0.2.3",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "postcss": "^7.0.0",
    "postcss-loader": "^2.1.5",
    "prettier": "^1.13.5",
    "progress-bar-webpack-plugin": "^1.11.0",
    "quickenv": "^0.0.5",
    "resolve-url-loader": "^2.3.0",
    "style-loader": "^0.21.0",
    "stylelint": "^9.3.0",
    "svelte-loader": "^2.9.1",
    "svelte-preprocess": "^2.2.3",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "url-loader": "^1.0.1",
    "webpack": "^4.12.0",
    "webpack-archive-plugin": "^3.0.0",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.3",
    "webpack-sources": "^1.1.0"
  },
  "dependencies": {
    "@mambasdk/app": "^0.0.1",
    "@mambasdk/appbar": "^0.0.1",
    "@mambasdk/dialog": "^0.0.1",
    "@mambasdk/icon": "^0.0.1",
    "@mambasdk/native": "^0.0.1",
    "@mambasdk/pos": "^0.0.1",
    "@mambasdk/store": "^0.0.1",
    "@mambasdk/styles": "^0.0.1",
    "svelte": "^2.8.1",
    "svelte-routing": "^0.4.2"
  }
}
