{
  "name": "mamba-app-template",
  "version": "1.0.0-alpha",
  "description": "Starter template for Mamba Applications.",
  "author": "Christian Kaisermann <christian.kaisermann@stone.com.br>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">= 8",
    "npm": ">= 5",
    "yarn": ">= 1.7"
  },
  "scripts": {
    "start": "webpack-dev-server --config ./node_modules/@mambasdk/webpack/config.dev.js",
    "build": "cross-env NODE_ENV=production webpack --config ./node_modules/@mambasdk/webpack/config.build.js",
    "build:dev": "webpack --config ./node_modules/@mambasdk/webpack/config.build.js",
    "build:analyze": "cross-env NODE_ENV=production webpack --config ./node_modules/@mambasdk/webpack/config.analyzer.js",
    "deploy:stone": "yarn build && rm -rf dist/ && mv bundle/ dist/ && mamba app deploy",
    "test": "jest --coverage",
    "test:watch": "yarn test --watch",
    "lint": "yarn lint:js; yarn lint:css;",
    "lint:js": "eslint *.js \"{src,test,webpack}/**/*.{js,html,svelte}\"",
    "lint:css": "stylelint --custom-syntax \"postcss-html\" \"src/**/*.{html,svelte,css,pcss}\"",
    "format": "yarn format:css; yarn format:js",
    "format:js": "prettier --write *.js \"{src,test,webpack}/**/*.js\" && eslint --fix *.js \"{src,test,webpack}/**/*.{js,html,svelte}\"",
    "format:css": "stylelint --fix --custom-syntax \"postcss-html\" \"src/**/*.{html,svelte,css,pcss}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,svelte}": [
      "eslint --fix",
      "stylelint --fix --custom-syntax \"postcss-html\"",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{pcss,css}": [
      "stylelint --fix --custom-syntax \"postcss-html\"",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.54",
    "@mambasdk/configs": "^0.0.4",
    "@mambasdk/webpack": "^0.0.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.0.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.1.0",
    "husky": "^0.15.0-rc.13",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.1.0",
    "lint-staged": "^7.2.0",
    "postcss": "^7.0.0",
    "prettier": "^1.13.5",
    "quickenv": "^0.0.5",
    "stylelint": "^9.3.0",
    "svelte-preprocess": "^2.2.3",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8"
  },
  "dependencies": {
    "@mambasdk/app": "^0.0.1",
    "@mambasdk/appbar": "^0.0.1",
    "@mambasdk/dialog": "^0.0.1",
    "@mambasdk/icon": "^0.0.1",
    "@mambasdk/native": "^0.0.1",
    "@mambasdk/pos": "^0.0.1",
    "@mambasdk/printable": "^0.0.2",
    "@mambasdk/store": "^0.0.1",
    "@mambasdk/styles": "^0.0.1",
    "svelte": "^2.8.1",
    "svelte-routing": "^0.4.2"
  }
}
