{
  "name": "mamba-app-template",
  "version": "1.0.0-alpha",
  "description": "Starter template for Mamba Applications.",
  "mamba": {
    "id": 99,
    "appName": "Mamba App",
    "iconPath": "assets/logo.bmp",
    "listInMainMenu": true,
    "appTechnology": "1",
    "appType": "0",
    "appCreationDate": "2017-07-17T13:32:00.000Z",
    "appPasswordProtectionLevel": "0",
    "appKey": "11-11-11-11"
  },
  "license": "Apache-2.0",
  "author": "Stone Payments - Mamba Team",
  "contributors": [
    "Christian Kaisermann <christian.kaisermann@stone.com.br>"
  ],
  "engines": {
    "node": ">= 8.11",
    "npm": ">= 5"
  },
  "scripts": {
    "start": "mamba app start",
    "start:server": "http-server 'dist/' --cors='*'",
    "build": "mamba app build",
    "build:dev": "mamba app build -d",
    "build:analyze": "mamba app analyze",
    "build-browser": "mamba app build -t browser",
    "build-browser:dev": "mamba app build -d -t browser",
    "build-browser:analyze": "mamba app analyze",
    "lint": "npm run lint:js; npm run lint:css;",
    "lint:js": "eslint *.js \"{src,test,webpack}/**/*.{js,html,svelte}\"",
    "lint:css": "stylelint --custom-syntax \"postcss-html\" \"src/**/*.{html,svelte,css,pcss}\"",
    "format": "npm run format:css; npm run format:js",
    "format:js": "prettier --write *.js \"{src,test,webpack}/**/*.js\" && eslint --fix *.js \"{src,test,webpack}/**/*.{js,html,svelte}\"",
    "format:css": "stylelint --fix --custom-syntax \"postcss-html\" \"src/**/*.{html,svelte,css,pcss}\"",
    "check-updates": "ncu"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{html,svelte}": [
        "eslint --fix",
        "stylelint --fix --custom-syntax \"postcss-html\"",
        "git add"
      ],
      "*.js": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ],
      "*.{pcss,css}": [
        "stylelint --fix --custom-syntax \"postcss-html\"",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-rc.1",
    "@mambasdk/cli": "^0.0.11",
    "@mambasdk/configs": "^0.0.12",
    "@mambasdk/webpack": "^0.0.24",
    "babel-core": "^7.0.0-bridge.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.3.0",
    "http-server": "^0.11.1",
    "husky": "^0.15.0-rc.13",
    "lint-staged": "^7.2.2",
    "npm-check-updates": "^2.14.2",
    "postcss": "^7.0.2",
    "prettier": "^1.14.2",
    "quickenv": "^0.0.6",
    "stylelint": "^9.4.0",
    "svelte-preprocess": "^2.2.3",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "@mambasdk/app": "^0.0.15",
    "@mambasdk/appbar": "^0.0.5",
    "@mambasdk/dialog": "^0.0.4",
    "@mambasdk/icon": "^0.0.3",
    "@mambasdk/pos": "^0.0.12",
    "@mambasdk/printable": "^0.0.17",
    "@mambasdk/store": "^0.0.4",
    "@mambasdk/styles": "^0.0.1",
    "svelte": "2.11.0",
    "svelte-routing": "^0.4.2"
  }
}
